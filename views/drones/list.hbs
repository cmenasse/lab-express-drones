<div>
{{#each drones}}
    <div>
        <h2>{{this.name}} (<a href="/drones/{{this._id}}/edit">Edit</a>)</h2>
        <ul>
            <li>Propellers: {{this.propellers}}</li>
            <li>Max Speed: {{this.maxSpeed}}</li>
        </ul>
    </div>
    <form action="/drones/{{this._id}}/delete" method="POST">
    <input type="submit" value="Delete"></form>
{{/each}}
</div>
